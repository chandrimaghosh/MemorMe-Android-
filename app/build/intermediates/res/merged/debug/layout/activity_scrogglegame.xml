<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/udaipur"
    tools:context=".scroggle.ScroggleMain">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <fragment
                android:id="@+id/fragment_Scrogglegame_GAME"
                class="syedamanalam.madcourse.neu.edu.numad17s_syedamanalam.scroggle.ScroggleGameFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_scrogglegame" />

            <fragment
                android:id="@+id/fragment_Scrogglegame_control"
                class="syedamanalam.madcourse.neu.edu.numad17s_syedamanalam.scroggle.ScroggleControlFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                tools:layout="@layout/fragment_scrogglecontrol" />

        </LinearLayout>


</FrameLayout>