<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    tools:context="syedamanalam.madcourse.neu.edu.numad17s_syedamanalam.scroggle.wordGameFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/scroggleNewGameButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttonshapeoval"
            android:text="New Game" />

        <Button
            android:id="@+id/scroggleContinueButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/buttonshapeoval"
            android:text="Continue" />

        <Button
            android:id="@+id/scroggleExitGameButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/buttonshapeoval"
            android:onClick="exitScroggleAndOpenMain"
            android:text="Exit" />
    </LinearLayout>

    <Button
        android:id="@+id/ScroggleAck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshapeoval"
        android:text="ACKNOWLEDGEMENTS"
        android:onClick="ScroggleAck"/>


</LinearLayout>
