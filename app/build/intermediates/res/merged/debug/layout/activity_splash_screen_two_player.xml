<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scroggle_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scroggleope"
    android:orientation="horizontal"
    tools:context="syedamanalam.madcourse.neu.edu.numad17s_syedamanalam.scroggle.ScroggleMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <Button
                android:id="@+id/newTwoPlayerGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonshapeoval"
                android:text="START 2 PLAYER GAME"
                android:textAllCaps="true"/>

            <Button
                android:id="@+id/highScoreTwoPlayerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonshapeoval"
                android:text="HIGH SCORE" />

            <Button
                android:id="@+id/exitTwoPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonshapeoval"
                android:text="exit"
                android:textAllCaps="true" />
        </LinearLayout>

        <Button
            android:id="@+id/twoPlayerAck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshapeoval"
            android:text="acknowledgements for two player game"
            android:textAllCaps="true" />

    </LinearLayout>

</LinearLayout>