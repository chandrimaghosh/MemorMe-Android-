<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/udaipur"
    tools:context=".twoPlayerWordGame.twoPlayerGameTutorial">



    <Button
        android:id="@+id/invisibleButton2Player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="extra time"
        android:textAllCaps="true"
        android:visibility="gone"/>

        <fragment
            android:id="@+id/fragment_Scrogglegame_GAME2Player"
            class="syedamanalam.madcourse.neu.edu.numad17s_syedamanalam.twoPlayerWordGame.twoPlayerGameFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_two_player_game"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <fragment
            android:layout_gravity="bottom"
            android:id="@+id/fragment_Scrogglegame_control2Player"
            class="syedamanalam.madcourse.neu.edu.numad17s_syedamanalam.twoPlayerWordGame.twoPlayerControlFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            tools:layout="@layout/two_player_control" />

    </RelativeLayout>
