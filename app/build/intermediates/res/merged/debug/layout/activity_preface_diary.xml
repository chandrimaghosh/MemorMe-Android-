<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7CCC8"
    android:orientation="vertical"
    tools:context="syedamanalam.madcourse.neu.edu.numad17s_syedamanalam.finalProject.prefaceDiary">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rootViewPreface"
            android:orientation="vertical">

            <TextView
                android:id="@+id/diaryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp"
                android:text="Preface"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/prefaceStoryTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:padding="20dp"
            />

        </LinearLayout>
    </ScrollView>

    <Button
        android:visibility="gone"
        android:layout_margin="10dp"
        android:text="Play Memor Me"
        android:id="@+id/startMemorMeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>
