<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9E9E9E"
    android:orientation="vertical"
    tools:context="syedamanalam.madcourse.neu.edu.numad17s_syedamanalam.finalProject.OfficeStartTime">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Enter your usual office start timings:"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TimePicker
            android:id="@+id/timePickerStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TimePicker>
    </LinearLayout>

    <Button
        android:id="@+id/submitOfficeStartTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="submit time" />

</RelativeLayout>
