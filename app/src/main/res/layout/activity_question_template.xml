<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/questionTemplateRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="syedamanalam.madcourse.neu.edu.numad17s_syedamanalam.finalProject.questionTemplate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/questionSpace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="QUESTION GOES HERE"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/hintButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Hint"/>

        <RadioGroup
            android:onClick="radioClick"
            android:id="@+id/radioButtonGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <RadioButton
                android:id="@+id/radioButtonDay1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TUESDAY" />

            <RadioButton
                android:id="@+id/radioButtonDay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WEDNESDAY" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/submitAnswerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/submitAnswer" />

</RelativeLayout>
