<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D32F2F"
                android:padding="10dp"
                android:text="ACKNOWLEDGEMENTS:" />


            <TextView
                android:id="@+id/intilleTextViewTwoPlayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E53935"
                android:padding="10dp"
                android:text="INTILLE TEXT VIEW" />

            <TextView

                android:id="@+id/anirudhTextViewTwoPlayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F44336"
                android:padding="10dp"
                android:text="ANIRUDH TEXT VIEW" />


            <TextView

                android:id="@+id/dharaTextViewTwoPlayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EF5350"
                android:padding="10dp"
                android:text="DHARA TEXT VIEW" />

            <TextView
                android:id="@+id/otherSourcesTextViewTwoPlayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E57373"
                android:padding="10dp"
                android:text="OTHER SOURCES TEXT VIEW" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>