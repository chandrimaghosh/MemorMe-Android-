<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/instructionGifLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#82B1FF"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="syedamanalam.madcourse.neu.edu.numad17s_syedamanalam.finalProject.Instruc">

    <pl.droidsonroids.gif.GifImageView
        android:layout_above="@+id/goBack"
        android:id="@+id/questionGif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:src="@drawable/questngif"/>

    <Button
        android:background="#3F51B5"
        android:layout_alignParentBottom="true"
        android:id="@+id/goBack"
        android:text="Go back to Memor-Me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>
