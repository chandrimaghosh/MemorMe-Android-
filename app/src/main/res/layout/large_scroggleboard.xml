<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".scroggle.ScroggleGameActivity">

    <include
        android:id="@+id/Scr_large1"
        layout="@layout/small_scroggleboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_margin="@dimen/small_board_margin"
        android:layout_row="0" />

    <include
        android:id="@+id/Scr_large2"
        layout="@layout/small_scroggleboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_margin="@dimen/small_board_margin"
        android:layout_row="0" />

    <include
        android:id="@+id/Scr_large3"
        layout="@layout/small_scroggleboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_margin="@dimen/small_board_margin"
        android:layout_row="0" />

    <include
        android:id="@+id/Scr_large4"
        layout="@layout/small_scroggleboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_margin="@dimen/small_board_margin"
        android:layout_row="1" />

    <include
        android:id="@+id/Scr_large5"
        layout="@layout/small_scroggleboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_margin="@dimen/small_board_margin"
        android:layout_row="1" />

    <include
        android:id="@+id/Scr_large6"
        layout="@layout/small_scroggleboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_margin="@dimen/small_board_margin"
        android:layout_row="1" />

    <include
        android:id="@+id/Scr_large7"
        layout="@layout/small_scroggleboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_margin="@dimen/small_board_margin"
        android:layout_row="2" />

    <include
        android:id="@+id/Scr_large8"
        layout="@layout/small_scroggleboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_margin="@dimen/small_board_margin"
        android:layout_row="2" />

    <include
        android:id="@+id/Scr_large9"
        layout="@layout/small_scroggleboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_margin="@dimen/small_board_margin"
        android:layout_row="2" />
</GridLayout>
